<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd
    "
>
    <!-- Beans for configurations -->
    <mvc:annotation-driven />
    <mvc:resources mapping="/files/**" location="/WEB-INF/files/" />
    <context:component-scan base-package="controllers, beans" />

    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
        <property name="defaultLocale" value="vi_VN" />
    </bean>

    <bean name="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <bean id="company" class="beans.Company" scope="singleton">
        <property name="host" value="smtp.gmail.com" />
        <property name="port" value="587" />
        <property name="username" value="example@gmail.com" />
        <property name="password" value="ptwylbcauywmolrq" />
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
            </props>
        </property>
    </bean>

    <!-- Beans for environment variables -->
    <bean id="user" class="beans.User" scope="prototype">
    </bean>

    <bean id="fromEmailAddressHolder" class="java.lang.String">
        <constructor-arg value="n21dccn038@student.ptithcm.edu.vn" />
    </bean>
</beans>